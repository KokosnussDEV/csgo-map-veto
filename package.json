{
  "name": "csgo-map-veto",
  "version": "1.0.0",
  "description": "An app to do CSGO map veto.",
  "license": "GPL-2.0",
  "author": "AkiVer",
  "homepage": "https://github.com/akiver/csgo-map-veto",
  "repository": {
    "type": "git",
    "url": "https://github.com/akiver/csgo-map-veto.git"
  },
  "main": "app/main.js",
  "scripts": {
    "dist": "build",
    "eslint": "./node_modules/eslint/bin/eslint.js app",
    "pack": "build --dir",
    "prepublish": "node scripts/move-bulma.js",
    "start": "rimraf .cache && electron ."
  },
  "dependencies": {
    "bulma": "^0.4.0",
    "electron-compile": "^6.1.3",
    "electron-devtools-installer": "^2.1.0",
    "electron-is": "^2.4.0",
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.3",
    "react-select": "^1.0.0-rc.3",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "electron-builder": "16.5.1",
    "electron-prebuilt-compile": "^1.6.2",
    "eslint": "^3.18.0",
    "eslint-plugin-react": "^6.10.3",
    "rimraf": "^2.6.1"
  },
  "build": {
    "appId": "com.electron.csgomapveto",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": "use default electron-builder rules but do not include app/bulma since electron-compile has trouble with sass import causing errors",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
      "!**/node_modules/.bin",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc}",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes,.editorconfig,.flowconfig,.yarn-metadata.json,.idea,appveyor.yml,.travis.yml,circle.yml,npm-debug.log,.nyc_output,yarn.lock,.yarn-integrity}",
      "!**/scripts",
      "!**/app/bulma"
    ]
  },
  "keywords": [
    "csgo",
    "electron"
  ]
}
